  </fieldset>
  <fieldset>
    <legend>Your payment details</legend>
    <div class="form-row">
      <label for="town">Made up credit card number</label>
      <input type="text" pattern="1234987644226655" oninvalid="this.setCustomValidity('Use the card number provided')" oninput="this.setCustomValidity('')" id="town" required placeholder="e.g. 4242 4242 4242 4242" />
    </div>
    <div class="form-row">
      <label for="town">CVV</label>
      <input type="text" pattern="[0-9]+" maxlength="4" id="cvv" required placeholder="e.g. 123" />
    </div>
  </fieldset>
