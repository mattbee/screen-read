      <label for="name">Your name</label>
      <input type="text" id="name" required placeholder="e.g. Eric Wimp" />
    </div>
    <div class="form-row">
      <label for="address">Address line 1</label>
      <input type="text" id="address" required placeholder="e.g. 29 Acacia Road" />
